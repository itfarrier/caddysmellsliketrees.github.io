{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "checkJs": true,
        "diagnostics": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
        "listEmittedFiles": true,
        "listFiles": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist/",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext"
    },
    "include": ["./src/**/*"]
}
